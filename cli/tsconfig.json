{
    "compilerOptions": {
        "strict": true,
        "alwaysStrict": true,
        "exactOptionalPropertyTypes": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "lib": [
            "es2022",
            "DOM"
        ],
        "jsx": "react-jsx",
        "module": "esnext",
        "target": "es2017",
        "moduleResolution": "bundler",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "rootDir": ".",
    },
    "include": [
        ".",
        "./**/*.jsx",
        "./**/*.tsx",
        "./**/*.svelte",
        "./**/*.vue",
        ".sky/**/*"
    ],
    "exclude": [
        ".dev",
        "examples",
        "boilerplates",
        "node_modules"
    ]
}